<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_common_rounded_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_invited_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/vhall_icon_marquee_close" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_invited_close"
        android:layout_centerHorizontal="true"
        android:text="@string/vhall_mic_invited_title"
        android:textColor="@color/black_title"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="41dp"
        android:text="@string/vhall_mic_invited"
        android:textColor="@color/black_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_invited_agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_common_rounded_red"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/vhall_agree"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_invited_disagree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_invited_agree"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_common_rounded_white_stoke"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/vhall_disagree"
        android:textColor="@color/black_text"
        android:textSize="14sp" />

</RelativeLayout>